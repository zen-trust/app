{
  "name": "@zen-trust/server",
  "version": "1.0.0",
  "description": "A SSH certificate authority server",
  "type": "module",
  "main": "dist/server.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/server.cjs",
      "import": "./dist/server.js"
    }
  },
  "bin": {
    "zen-trust": "dist/index.js"
  },
  "scripts": {
    "build_old": "swc src/ --out-dir dist/ --config-file .swcrc",
    "build": "tsup",
    "build_new": "tsup --dts --dts-resolve --sourcemap --clean --metafile --platform node --shims --cjsInterop --format esm,cjs --target esnext --keep-names --out-dir dist/ src/server.ts",
    "dev_new": "tsup --watch --onSuccess 'node dist/server.cjs' --dts --dts-resolve --sourcemap --clean --metafile --platform node --shims --cjsInterop --format esm,cjs --target esnext --keep-names --out-dir dist/ src/server.ts",
    "start": "node dist/server.cjs",
    "dev": "tsup --format cjs --sourcemap --no-dts --watch --onSuccess 'node --enable-source-maps dist/server.cjs'",
    "dev_old": "ts-node-dev --pretty --transpile-only --respawn --no-notify --no-deps --prefer-ts-exts --watch src/ src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "schema": "DATABASE_URL=postgresql://zen_trust:zen_trust@127.1:5432/zen_trust zapatos",
    "prettier": "prettier --write \"src/**/*.{ts,tsm}\"",
    "cli:docs": "write-markdown --configFile package.json --jsonPath \"config.zenCliDocsMarkdown\"",
    "db:migrations": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql",
    "db:migrations:new": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql new",
    "db:migrations:up": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql up",
    "db:migrations:create": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql create",
    "db:migrations:drop": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql drop",
    "db:migrations:migrate": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql migrate",
    "db:migrations:rollback": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql rollback",
    "db:migrations:down": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql down",
    "db:migrations:status": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql status",
    "db:migrations:dump": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql dump",
    "db:migrations:help": "docker compose run migrations --migrations-dir /var/share/migrations --schema-file /var/share/schema.sql help",
    "migrate": "npm run db:migrations:up",
    "generate-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64url'))\""
  },
  "keywords": [
    "ssh",
    "ca",
    "authority",
    "ca-certificates",
    "trust",
    "trust-root",
    "ssh-certificates",
    "authentication",
    "server",
    "http"
  ],
  "author": "Moritz Friedrich <m@9dev.de>",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/secure-session": "^7.1.0",
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.2.5",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.5",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/platform-fastify": "^10.2.5",
    "@nestjs/swagger": "^7.1.12",
    "@node-oauth/oauth2-server": "^5.0.0-rc.4",
    "@simplewebauthn/server": "^8.2.0",
    "@simplewebauthn/typescript-types": "^8.0.0",
    "argon2": "^0.31.1",
    "cache-manager": "^5.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.23.2",
    "nestjs-zod": "^3.0.0",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.6",
    "pg": "^8.11.3",
    "ts-command-line-args": "^2.5.1",
    "uuidv7": "^0.6.3",
    "zapatos": "^6.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^4.2.0",
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.82",
    "@swc/helpers": "^0.5.2",
    "@types/node": "^20.6.5",
    "@types/node-forge": "^1.3.5",
    "@types/nodemailer": "^6.4.11",
    "@zen-trust/json-api": "*",
    "dbmate": "^2.6.0",
    "eslint-define-config": "^1.23.0",
    "node-dev": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "config": {
    "zenCliDocsMarkdown": {
      "markdownPath": "./README.md",
      "jsFile": "./dist/cli/args.js",
      "replaceBelow": "<!-- CLI docs below -->",
      "replaceAbove": "<!-- CLI docs above -->",
      "removeDoubleBlankLines": true,
      "skipFooter": true
    }
  }
}
